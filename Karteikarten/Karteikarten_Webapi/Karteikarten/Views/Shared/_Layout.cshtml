<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @*<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>*@
    <script src="~/Karteikarten/Scripts/vendor/jquery-3.2.1.min.js"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Karteikarten/css")

</head>
<body>
    @{
        var cookie = "+";
        if (HttpContext.Current.Request.Cookies["userName"] != null)
        {
            cookie = HttpContext.Current.Request.Cookies["userName"].Value;
        }
        
    }
    <nav>
        <ul id="menu">
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(cookie, "Profil", "Home", new { area = "" }, null)</li>
        </ul>
    </nav>
    

    @RenderBody()


    @RenderSection("scripts", required: false)
    <script src="~/Karteikarten/Scripts/auth.js"></script>
</body>
</html>
